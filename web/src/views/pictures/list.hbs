<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Pictures</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tbody>
            {{#each pictures as |picture index|}}
            <tr>
              <td>
                <div class="user-block">
                  <div class="btn-group pull-right sneaky">
                    <a href="/posters/edit?id={{picture.id}}" class="btn-sm btn-default btn-flat" data-toggle="tooltip" title="" data-original-title="Edit">
                      <i class="fa fa-edit"></i></a>
                    <a href="/posters/remove?id={{picture.id}}" class="btn-sm btn-default btn-flat" data-toggle="tooltip" title="" data-original-title="Remove">
                      <i class="fa fa-remove"></i></a>
                  </div>
                  <span class="username">{{picture.title}}</span>
                  <span class="description">{{picture.description}}</span>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody></table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
          <a href="/pictures/add" class="btn btn-primary"><i class="fa fa-plus fa-fw"></i>Add Picture</a>
        </div>
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>
<!-- /.content -->
